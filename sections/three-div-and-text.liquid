<section>
  <div class="main-planning">
    <div class="display--flex">
       {% for block in section.blocks %}  
      <div class="image-planning">

      <div class="image_box"> 
          
          {{ block.settings.testi-img | img_url: 'master', scale: 2 | img_tag: block.settings.image.alt, 'logo-bar__image' }}
     <div class="background-overlay">
             </div>
     <div class="clscenter">
       <h2 class="heading-planing" style=" color: {{ block.settings.color_title }}">{{ block.settings.testi-title | escape }}</h2>
        
        <button class="btnplaning">{{ block.settings.testi-title | escape }}</button>
     </div>
        
        
    </div>
     
    </div>
        {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
   "name":"text-image",
   "settings":[
    
   ],
   "blocks":[
      {
         "type":"quote",
         "name":"image-text",
         "settings":[
            {
               "type":"text",
               "id":"testi-title",
               "label":"text of image",
               "default":"mycodemagic"
            },
            {
               "type":"image_picker",
               "id":"testi-img",
               "label":"image"
            },
               {
               "type":"text",
               "id":"btn-title",
               "label":"text of button",
               "default":"Learn More"
            },
             {
      "type": "color",
      "id": "color_title",
      "label": "Heading color",
      "default": "#FFFFFF"
     } 
         ]
      }
   ],
   "presets":[
      {
         "name":"text-image",
         "category":"Text",
         "blocks":[
            {
               "type":"quote"
            },
            {
               "type":"quote"
            },
            {
               "type":"quote"
            }
         ]
      }
   ]
}

{% endschema %}

{% stylesheet %}
  .heading-planing{
        text-align: center;
    font-size: 24px;
        font-weight: 800;
}
  .background-overlay{
    background-color: #00000036;
    opacity: .7;
    position: absolute;
    height: 100%;
    width: 100%;
    top: 0;
    left: 0;
  }
{% endstylesheet %}

